<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ui.PriceFragment">

    <ImageView
        android:id="@+id/iv_highlight_1"
        android:layout_width="420dp"
        android:layout_height="250dp"
        android:contentDescription="@string/highlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/iv_highlight_2"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:contentDescription="@string/highlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/iv_highlight_3"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:contentDescription="@string/highlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/ic_launcher_background" />

    <ImageView
        android:id="@+id/iv_highlight_4"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:contentDescription="@string/highlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/ic_launcher_background" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ic_highlight_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="24dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintEnd_toStartOf="@id/ic_highlight_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_highlight_1"
        app:srcCompat="@drawable/ic_circle_blank"
        app:tint="@color/md_theme_dark_primary" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ic_highlight_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintEnd_toStartOf="@+id/ic_highlight_3"
        app:layout_constraintStart_toEndOf="@id/ic_highlight_1"
        app:layout_constraintTop_toTopOf="@id/ic_highlight_1"
        app:srcCompat="@drawable/ic_circle_blank"
        app:tint="@color/md_theme_dark_primary" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ic_highlight_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintEnd_toStartOf="@id/ic_highlight_4"
        app:layout_constraintStart_toEndOf="@id/ic_highlight_2"
        app:layout_constraintTop_toTopOf="@+id/ic_highlight_2"
        app:srcCompat="@drawable/ic_circle_blank"
        app:tint="@color/md_theme_dark_primary" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ic_highlight_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="120dp"
        app:altSrc="@drawable/ic_circle_full"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_highlight_3"
        app:layout_constraintTop_toTopOf="@id/ic_highlight_3"
        app:srcCompat="@drawable/ic_circle_blank"
        app:tint="@color/md_theme_dark_primary" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_rice"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ic_highlight_1" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_chicken"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/ib_rice"
        app:layout_constraintTop_toTopOf="@id/ib_rice" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_beef"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/ib_chicken"
        app:layout_constraintTop_toTopOf="@id/ib_chicken" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_egg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/ib_beef"
        app:layout_constraintTop_toTopOf="@id/ib_beef" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_shallot"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="@id/ib_rice"
        app:layout_constraintTop_toBottomOf="@id/ib_rice" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_garlic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/ib_chicken"
        app:layout_constraintTop_toTopOf="@id/ib_shallot" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_red_chilli"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/ib_beef"
        app:layout_constraintTop_toTopOf="@id/ib_garlic" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_more"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintStart_toStartOf="@id/ib_egg"
        app:layout_constraintTop_toTopOf="@id/ib_red_chilli" />


</androidx.constraintlayout.widget.ConstraintLayout>